libs = [
	'videocommon', 'GLEW', 'SDL', 'SOIL', 'common'
	]

gfxenv = env.Clone()

if sys.platform == 'win32':
        files += [ 'Win32.cpp' ]

if sys.platform == 'darwin':
	files += [ 'cocoaGL.m', ]

